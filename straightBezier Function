@name straightBezier Function
@inputs [StartPos MiddlePos EndPos]:vector
@persist Mix Add
@trigger none

interval(60)
if(first()){
    holoCreate(1)
    
    function vector straightBezier(V1:vector ,V2:vector ,V3:vector ,M ){
        if(M<0.5){
            return mix(V2,V1,M*2)
        }else{
            return mix(V3,V2,(M-0.5)*2)
        }
    }
    
}

Mix+=Add
if(Mix==1){
    Add=-0.05
}
if(Mix==0){
    Add=0.05
}

holoPos(1,straightBezier(StartPos,MiddlePos,EndPos,Mix))
